<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterMovieScene"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:textAlignment="center"
        android:background="#e2e2e2"
        android:textSize="22dp"
        android:text="Insert Movie Details"
        android:gravity="center_horizontal" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:text="Movie title"

            />

        <EditText
            android:id="@+id/editTextMovieTitle"
            android:layout_width="246dp"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:text="Movie Year" />

        <EditText
            android:id="@+id/editTextMovieYear"
            android:layout_width="246dp"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:text="Movie Director" />

        <EditText
            android:id="@+id/editTextmoviedirector"
            android:layout_width="246dp"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:text="Actors/Actresses" />

        <EditText
            android:id="@+id/editTextActors"
            android:layout_width="246dp"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:text="Rating" />

        <EditText
            android:id="@+id/editTextrating"
            android:layout_width="246dp"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:text="Review" />

        <EditText
            android:id="@+id/editTextReview"
            android:layout_width="246dp"
            android:layout_height="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="170dp"
            android:text="Save"
            android:onClick="SavetoSQL"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="25dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/HomeButton"
            android:layout_width="170dp"
            android:text="Home"
            android:onClick="ToHome"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>